<% layout('/boilerplates/main.ejs') -%> 


<div class="row mt-3 mb-3">
    <div class="col-8 offset-2">
        <h1>Create New Volunteer</h1>
        <form action="/volunteer/register" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="fullname" class="form-label">Volunteer FullName</label>
                <input type="text" name="fullname" class="form-control" id="fullname" placeholder="Enter Volunteer FullName" required>
            </div>
            <div class="mb-3">
            <label for="username" class="form-label">Vounteer UserID</label>
            <input type="text" name="username" class="form-control" id="username" aria-describedby="usernameHelp" placeholder="Volunteer ID" required>
            <div id="usernameHelp" class="form-text">UserID should be unique</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" class="form-control" id="password" placeholder="Volunteer Password" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Volunteer email</label>
                <input type="email" name="email" class="form-control" id="email" placeholder="Enter Volunteer Email" required>
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Volunteer Address</label>
                <input type="text" name="address" class="form-control" id="address" placeholder="Volunteer Full Address" required>
            </div>
            <div class="mb-3">
                <label for="skills" class="form-label">Volunteer Skills</label>
                <input type="text" name="skills" class="form-control" id="skills" placeholder="Volunteer all Skills" required>
            </div>
            <div class="mb-3">
                <label for="qualifications" class="form-label">Qualifications</label>
                <input type="text" name="qualifications" class="form-control" id="qualifications" placeholder="All Qualifications" required>
            </div>

            <button type="submit" class="btn btn-primary">Register Volunteer</button>
        </form>
    </div>
</div>